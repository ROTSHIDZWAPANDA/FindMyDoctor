<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".DoctorHomeFragment"
    android:background="@drawable/hearder_bg_6">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <androidx.appcompat.widget.SearchView
            android:id="@+id/PatientSearchView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:background="@color/white"
            app:queryHint="Search here...."
            app:iconifiedByDefault="false">

        </androidx.appcompat.widget.SearchView>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginTop="25dp"

                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="GOOD DAY DR"
                    android:layout_gravity="start"
                    android:textSize="32dp"
                    android:layout_marginLeft="9dp"
                    android:textStyle="bold"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="R. PHANDA"
                    android:layout_gravity="bottom"
                    android:textSize="18dp"
                    android:layout_marginLeft="15dp"

                    android:textStyle="bold"
                    />




            </LinearLayout>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="What Can we do for you?"
                android:layout_gravity="start"
                android:textSize="18dp"
                android:layout_marginLeft="9dp"
                android:layout_marginTop="20dp"
                android:textStyle="bold"
                />


            <GridLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:columnCount="2"
                android:rowCount="2">
                <androidx.cardview.widget.CardView
                    android:id="@+id/cvAvailability"
                    android:layout_height="200dp"
                    android:layout_width="150dp"
                    app:cardElevation="10dp"
                    android:outlineAmbientShadowColor="@color/teal_700"
                    android:outlineSpotShadowColor="@color/teal_700"
                    android:layout_margin="2dp"
                    android:background="@color/purple_200"
                    app:cardCornerRadius="10dp"
                    app:cardPreventCornerOverlap="true"
                    app:cardUseCompatPadding="true"
                    app:cardMaxElevation="12dp"

                    >

                    <ImageView
                        android:layout_width="90dp"
                        android:layout_height="77dp"
                        android:layout_gravity="center"


                        android:src="@drawable/calendar" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom|center"
                        android:layout_marginTop="100dp"
                        android:layout_marginBottom="10dp"
                        android:text="Availability"
                        android:textSize="15dp"
                        android:textStyle="bold"
                        tools:ignore="TextSizeCheck" />
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:id="@+id/cvdoctorAppointments"
                    android:layout_height="200dp"
                    android:layout_width="150dp"
                    app:cardElevation="10dp"
                    android:layout_margin="2dp"
                    android:outlineAmbientShadowColor="@color/teal_700"
                    android:outlineSpotShadowColor="@color/teal_700"
                    android:background="@color/purple_200"
                    app:cardCornerRadius="10dp"
                    app:cardPreventCornerOverlap="true"
                    app:cardUseCompatPadding="true"
                    app:cardMaxElevation="12dp"

                    >
                    <ImageView
                        android:layout_width="90dp"
                        android:layout_height="77dp"
                        android:layout_gravity="center"
                        android:layout_margin="10dp"
                        android:src="@drawable/registrationform" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom|center"
                        android:layout_marginTop="100dp"
                        android:layout_marginBottom="10dp"
                        android:text="Appointments"
                        android:textSize="15dp"
                        android:textStyle="bold"
                        tools:ignore="TextSizeCheck" />
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_height="200dp"
                    android:layout_width="150dp"
                    app:cardElevation="10dp"
                    android:layout_margin="2dp"
                    android:background="@color/purple_200"
                    android:outlineAmbientShadowColor="@color/teal_700"
                    android:outlineSpotShadowColor="@color/teal_700"
                    app:cardCornerRadius="10dp"
                    app:cardPreventCornerOverlap="true"
                    app:cardUseCompatPadding="true"
                    app:cardMaxElevation="12dp"

                    >
                    <ImageView
                        android:layout_width="90dp"
                        android:layout_height="77dp"
                        android:layout_gravity="center"
                        android:layout_margin="10dp"
                        android:src="@drawable/medicalrecord" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom|center"
                        android:layout_marginTop="100dp"
                        android:layout_marginBottom="10dp"
                        android:text="History"
                        android:textSize="15dp"
                        android:textStyle="bold"
                        tools:ignore="TextSizeCheck" />
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:id="@+id/cvRegisterSurgery"
                    android:layout_height="200dp"
                    android:layout_width="150dp"
                    app:cardElevation="10dp"
                    android:layout_margin="2dp"
                    android:background="@color/purple_200"
                    android:outlineAmbientShadowColor="@color/teal_700"
                    android:outlineSpotShadowColor="@color/teal_700"
                    app:cardCornerRadius="10dp"
                    app:cardPreventCornerOverlap="true"
                    app:cardUseCompatPadding="true"
                    app:cardMaxElevation="12dp"

                    >
                    <ImageView
                        android:layout_width="90dp"
                        android:layout_height="77dp"
                        android:layout_gravity="center"
                        android:layout_margin="10dp"
                        android:src="@drawable/surgeryroom" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom|center"
                        android:layout_marginTop="100dp"
                        android:layout_marginBottom="10dp"
                        android:text="Register Surgery"
                        android:textSize="15dp"
                        android:textStyle="bold"
                        tools:ignore="TextSizeCheck" />
                </androidx.cardview.widget.CardView>



            </GridLayout>



        </LinearLayout>
    </LinearLayout>








</FrameLayout>