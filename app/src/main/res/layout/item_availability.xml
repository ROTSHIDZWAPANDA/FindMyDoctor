<?xml version="1.0" encoding="utf-8"?>
<!-- item_availability.xml -->

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="8dp">
    <androidx.cardview.widget.CardView
        android:id="@+id/cardSlots"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:outlineAmbientShadowColor="@color/teal_700"
        android:outlineSpotShadowColor="@color/teal_700"

        android:background="@color/purple_200"
        app:cardCornerRadius="3dp"

        ><LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
            <TextView
                android:id="@+id/dayOfWeek"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="MONDAY"
                android:layout_gravity="center"
                android:textStyle="bold"
                android:textSize="21dp"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/purple_200"
                android:layout_margin="10dp"/>
            <LinearLayout
                android:id="@+id/layoutSlots"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_gravity="center"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/Slots"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="18:00 to 18:30"
                    android:layout_gravity="start"
                    android:layout_margin="5dp"
                    android:layout_marginLeft="15dp"
                    android:textStyle="bold"
                    android:textSize="18dp"
                    />
                <ImageView

                    android:id="@+id/deleteSlot"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:src="@drawable/bin"
                    android:layout_marginLeft="15dp"/>


            </LinearLayout>


        </LinearLayout>




    </LinearLayout>
        
        
        
        
    </androidx.cardview.widget.CardView>
    



</LinearLayout>
